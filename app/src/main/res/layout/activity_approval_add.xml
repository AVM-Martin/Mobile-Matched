<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.approve.add.AddApproval"
    android:layout_margin="20dp">

    <id.my.avmmartin.matched.components.add_menu.AddMenu
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </id.my.avmmartin.matched.components.add_menu.AddMenu>

    <EditText
        android:id="@+id/etUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Username"
        android:layout_margin="10dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textSize="20sp"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/tvApprovalDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:gravity="right"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp">

        <ImageButton
            android:id="@+id/ibCancelApproval"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/cancel_24dp"
            android:layout_alignParentStart="true"/>

        <ImageButton
            android:id="@+id/ibAddApproval"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/check_24dp"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

</LinearLayout>
